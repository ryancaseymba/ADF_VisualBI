{
	"name": "Activity-Ingest-SQL-FullLoad-Pipeline",
	"properties": {
		"activities": [
			{
				"name": "Copy SQL Data",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"sqlReaderQuery": {
							"value": "@replace(pipeline().parameters.SourceQuery,'{pipelineTime}',pipeline().TriggerTime)",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "DMS_SQL_Dataset",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CSV_DataLake_Dataset",
						"type": "DatasetReference",
						"parameters": {
							"ContainerName": {
								"value": "@pipeline().parameters.DataContainer",
								"type": "Expression"
							},
							"FilePath": {
								"value": "@pipeline().parameters.TargetFilePath",
								"type": "Expression"
							},
							"FileName": {
								"value": "@pipeline().parameters.TargetFileName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"SourceQuery": {
				"type": "string"
			},
			"TargetFilePath": {
				"type": "string"
			},
			"TargetFileName": {
				"type": "string"
			},
			"DataContainer": {
				"type": "string"
			}
		},
		"folder": {
			"name": "Activity"
		},
		"annotations": []
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}